<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="35dp"
		android:layout_marginTop="80dp"
		android:layout_marginEnd="35dp"
		android:layout_marginBottom="80dp"
		android:columnCount="2"
		android:rowCount="4"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">


		<Button
			android:id="@+id/btnsatu"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:onClick="play"
			android:text="adakah"
			android:tag="doyouspeakenglish"/>
		<Button
			android:id="@+id/btndua"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adami"
			android:onClick="playdua"
			android:tag="goodevening"/>
		<Button
			android:id="@+id/btntiga"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adatoh"
			android:onClick="playtiga"
			android:tag="hello"/>
		<Button
			android:id="@+id/btnempat"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adapi"
			android:onClick="playempat"
			android:tag="howareyou"/>
		<Button
			android:id="@+id/btnlima"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adaga"
			android:onClick="playlima"
			android:tag="ilivein"/>
		<Button
			android:id="@+id/btnenam"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adaki"
			android:onClick="playenam"
			android:tag="mynameis"/>
		<Button
			android:id="@+id/btntujuh"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adadik"
			android:onClick="playtujuh"
			android:tag="please"/>
		<Button
			android:id="@+id/btndelapan"
			android:layout_gravity="fill"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"
			android:textSize="30dp"
			android:text="adaca'"
			android:onClick="playdelapan"
			android:tag="welcome"/>
	</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>